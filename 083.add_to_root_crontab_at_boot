#!/bin/bash

####add to root crontab at boot

sudo echo "@reboot /home/$SUDO_USER/.ubunsys/downloads/ubuntuScripts-dev/075.silentUpdatePackagesMessages" >> /etc/crontab
sudo echo "@reboot /home/$SUDO_USER/.ubunsys/downloads/ubuntuScripts-dev/062.silentUpdatePackages" >> /etc/crontab

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "At boot" WHERE name = "updateAuto";
END_SQL