#!/bin/bash

####remove to root crontab

sudo sed --in-place '/062.silentUpdatePackages/d' /etc/crontab &&
sudo sed --in-place '/075.silentUpdatePackagesMessages/d' /etc/crontab

sqlite3 /home/$SUDO_USER/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Disabled" WHERE name = "updateAuto";
END_SQL