#!/bin/bash

####add to root crontab each hour

touch ./ubunsys-packages-update
echo "#!/bin/bash" >> ./ubunsys-packages-update
echo "" >> ./ubunsys-packages-update
echo "/home/$USER/.ubunsys/downloads/ubuntuScripts-dev/075.silentUpdatePackagesMessages" >> ./ubunsys-packages-update
echo "/home/$USER/.ubunsys/downloads/ubuntuScripts-dev/062.silentUpdatePackages" >> ./ubunsys-packages-update
sudo mv ubunsys-packages-update /etc/cron.hourly/ubunsys-packages-update
sudo chmod 755 /etc/cron.hourly/ubunsys-packages-update
sudo chown root /etc/cron.hourly/ubunsys-packages-update

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Eacho hour" WHERE name = "updateAuto";
END_SQL

read