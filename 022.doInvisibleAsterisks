#!/bin/bash

#http://www.linuxhispano.net/2013/09/05/mostrar-los-asteriscos-de-la-contrasena-en-un-terminal/

# Restore defaults

echo "do invisible"

sudo sed -i 's/Defaults\tenv_reset,pwfeedback/Defaults\tenv_reset/g' /etc/sudoers &&

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Disabled" WHERE name = "asterisks";
END_SQL