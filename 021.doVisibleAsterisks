#!/bin/bash

#http://www.linuxhispano.net/2013/09/05/mostrar-los-asteriscos-de-la-contrasena-en-un-terminal/

# Modify defaults

echo "do visible"

sudo sed -i 's/Defaults\tenv_reset/Defaults\tenv_reset,pwfeedback/g' /etc/sudoers &&

sqlite3 ~/.ubunsys/configurations/config.db <<END_SQL
.timeout 2000
UPDATE config SET status = "Enabled" WHERE name = "asterisks";
END_SQL